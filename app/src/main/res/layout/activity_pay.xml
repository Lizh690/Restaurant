<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_tool_bar"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/pay_total"
            android:text="16.88"
            android:textSize="36sp"
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="元"
            android:layout_toRightOf="@+id/pay_total"
            android:layout_alignBaseline="@+id/pay_total"
            android:textSize="16sp"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pay_method_ali"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/pay_iv_ali"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pay_icon_ali"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/pay_iv_ali"
            android:background="#888888"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pay_iv_ali"
            android:layout_marginLeft="4dp"
            android:text="支付宝"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pay_ali_checked"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/pay_checked"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_method_wx"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/pay_iv_wx"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pay_icon_wx"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pay_iv_wx"
            android:text="微信"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pay_wx_checked"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@drawable/pay_unchecked"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/pay_button"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/pay_button_shape"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>
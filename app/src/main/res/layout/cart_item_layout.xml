<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    app:cardBackgroundColor="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_item_iv"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/cart_item_tv_name"
            android:layout_toRightOf="@+id/cart_item_iv"
            android:layout_margin="4dp"
            android:text="123"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cart_item_tv_price"
            android:layout_toRightOf="@+id/cart_item_iv"
            android:layout_below="@+id/cart_item_tv_name"
            android:text="123"
            android:layout_marginLeft="4dp"
            android:textSize="18sp"
            android:textColor="#FF4500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cart_tv_minus"
            android:layout_toLeftOf="@+id/cart_tv_count"
            android:background="@drawable/minus_round"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/cart_tv_count"
            android:text="10"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cart_tv_add"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cart_tv_add"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_round"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chageuser_activity_bg">

    <include
        android:id="@+id/include1"
        layout="@layout/include_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/chageuser_cv_1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <EditText
            android:id="@+id/chageuser_tv_name"
            android:hint="称呼"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chageuser_cv_2"
        android:layout_below="@+id/chageuser_cv_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/chageuser_et_adress"
            android:textSize="15sp"
            android:minLines="4"
            android:hint="地址"
            android:gravity="left|top"
            android:layout_margin="6dp"
            android:textColorHint="#666666"
            android:inputType="textMultiLine"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chageuser_cv_3"
        android:layout_below="@+id/chageuser_cv_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/chageuser_rl_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chageuser_tv_phone"
                android:hint="手机号码"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_margin="6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/chageuser_iv_arrow1"
                android:layout_marginRight="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="16dp"
                android:layout_height="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chageuser_cv_4"
        android:layout_below="@+id/chageuser_cv_3"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/chageuser_rl_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chageuser_tv_pwd"
                android:hint="修改密码"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_margin="6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>


            <ImageView
                android:layout_marginRight="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="16dp"
                android:layout_height="20dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/chageuser_cv_5"
        android:layout_below="@+id/chageuser_cv_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/chageuser_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="16sp"
            android:background="#7f81d9"/>

    </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>

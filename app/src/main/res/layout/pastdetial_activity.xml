<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include45"
        layout="@layout/include_tool_bar"/>

    <TextView
        android:id="@+id/pastdetial_tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号"/>

    <TextView
        android:id="@+id/pastdetial_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单时间："/>
    <TextView
        android:id="@+id/pastDetial_tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成状态："
        />
    <TextView
        android:id="@+id/pastdetial_tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付方式："/>

    <TextView
        android:id="@+id/pastdetial_tv_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="金额："/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pastdetial_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/pastdetial_tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="备注："/>

</LinearLayout>
